.auth-image
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 9
  width 100%
  height 100%
  background #000

.auth-wrapper
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 10
  background #fff

.auth-image:before
  content ''
  background url('../media/cover/1.jpg')
  filter blur(5px)
  opacity .5
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  z-index 11
