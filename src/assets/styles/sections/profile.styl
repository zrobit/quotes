.profile
  margin-top 36px

.profile-cover
  max-width 1200px
  height 180px
  background gray(20)
  margin 0 auto

.profile-detail
  text-align center
  background #fff

.profile-avatar
  width 80px
  height 40px
  // border-radius 40px
  margin 0 auto
  border 2px solid #fff
  img
    margin-top -40px
    width 100%
    border-radius 40px

.profile-info
  text-align center
  h2
    font-size 24px
    color gray(70)
    font-weight 100
    margin-bottom 0

  p
    font-size 14px
    color gray(65)
    font-weight 100

.profile-numbers
  li
    font-size 14px
  a
    color gray(30)

  span
    font-weight bold
    margin-right 5px


.profile-tab
  margin-top 20px
  border-top 1px solid gray(5)
  margin-bottom 10px
