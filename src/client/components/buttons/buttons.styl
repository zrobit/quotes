@import '../proxy'

//shareSmallButtons
.smallBtn
  display inline-block
  padding 5px
  svg
    fill gray(40)
    box(20px)

  &.facebook
    &:hover
      svg
        fill facebookColor

  &.twitter
    &:hover
      svg
        fill twitterColor

.btnList
  width 80px
  height 40px
  display block
  float right
  padding 0
  margin 0
  list-style none
  li
    float left
    margin-left 10px

// mediumShareButtons
.mediumBtnList
  max-width 400px
  list-style none
  margin 0
  padding 0
  li
    float left
    width 50%
    padding 0 5px
    box-sizing border-box

.mediumBtn
  display block
  width 100%
  height 40px
  padding 8px 10px
  box-sizing border-box
  text-decoration none
  text-align center
  border-radius 3px
  svg
    fill #fff
    box(24px)
  span
    color #fff
    margin 0 0 0 8px

  &.twitter
    background twitterColor
    &:hover
      background lighten(twitterColor, 3)

  &.facebook
    background facebookColor
    &:hover
      background lighten(facebookColor, 3)
