.landing
  overflow hidden
  width 100%
  height 400px
  // background url('../media/cover.jpg')
  img
    filter: blur(4px);

  h1
    color #fff
    padding-top 100px
    text-align center
    font-weight 100

  &:before
    content ''
    width 100%
    height 400px
    display block
    position absolute
    background #000
    z-index 998
    opacity .7


.wrap
  margin 0 auto
  @media screen and (min-width: 1190px)
    width 1190px


.inner
  padding-bottom 10px

  @media screen and (min-width: 800px)
    padding-right 410px

.main
  width 100%
  margin-bottom 10px

  @media screen and (min-width: 800px)
    float left

.sidebar
  @media screen and (min-width: 800px)
    width 400px
    float right
    margin-right -410px


.color
  background green
